<style>
  /* Le CSS reste inchangé */
  .navbar-hamburger-icon{width:24px;height:18px;position:relative;cursor:pointer}.navbar-hamburger-line{display:block;width:100%;height:2px;background-color:currentColor;border-radius:1px;position:absolute;transition:all .3s cubic-bezier(.25,.46,.45,.94)}.navbar-hamburger-line:nth-child(1){top:0}.navbar-hamburger-line:nth-child(2){top:8px}.navbar-hamburger-line:nth-child(3){top:16px}.navbar-hamburger-active .navbar-hamburger-line:nth-child(1){transform:rotate(45deg);top:8px}.navbar-hamburger-active .navbar-hamburger-line:nth-child(2){opacity:0}.navbar-hamburger-active .navbar-hamburger-line:nth-child(3){transform:rotate(-45deg);top:8px}.navbar-overlay-visible{opacity:1!important;visibility:visible!important}
</style>

<script>
  // Le script JavaScript reste inchangé, la logique est toujours bonne
  document.addEventListener('DOMContentLoaded', () => {
    const drawerToggle = document.getElementById('navbar-drawer-toggle');
    const drawerClose = document.getElementById('navbar-drawer-close');
    const drawer = document.getElementById('navbar-drawer');
    const overlay = document.getElementById('navbar-drawer-overlay');
    if (!drawerToggle || !drawerClose || !drawer || !overlay) return;
    const hamburgerIcon = drawerToggle.querySelector('.navbar-hamburger-icon');
    function openDrawer() {
      overlay.classList.add('navbar-overlay-visible');
      hamburgerIcon?.classList.add('navbar-hamburger-active');
      drawer.classList.remove('translate-x-full');
      drawer.classList.add('translate-x-0');
      drawer.setAttribute('aria-hidden', 'false');
      drawerToggle.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
      drawerClose.focus();
    }
    function closeDrawer() {
      overlay.classList.remove('navbar-overlay-visible');
      hamburgerIcon?.classList.remove('navbar-hamburger-active');
      drawer.classList.remove('translate-x-0');
      drawer.classList.add('translate-x-full');
      drawer.setAttribute('aria-hidden', 'true');
      drawerToggle.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
      drawerToggle.focus();
    }
    drawerToggle.addEventListener('click', () => {
      if (drawer.classList.contains('translate-x-0')) {
        closeDrawer();
      } else {
        openDrawer();
      }
    });
    drawerClose.addEventListener('click', closeDrawer);
    overlay.addEventListener('click', closeDrawer);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && drawer.classList.contains('translate-x-0')) {
        closeDrawer();
      }
    });
    const navLinks = drawer.querySelectorAll('.navbar-drawer-nav-item');
    navLinks.forEach(link => {
      link.addEventListener('click', closeDrawer);
    });
  });
</script>